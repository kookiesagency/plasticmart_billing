{
  "name": "plasticmart-ecosystem",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@plasticmart/web",
    "dev:mobile": "npm run start --workspace=@plasticmart/mobile",
    "build:web": "npm run build --workspace=@plasticmart/web",
    "build:shared": "npm run build --workspace=@plasticmart/shared",
    "test": "npm run test --workspaces",
